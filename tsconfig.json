{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
    },
    "lib": [
      "DOM"
    ],
    "suppressImplicitAnyIndexErrors": true,
  },
  "include": ["src/**/*"]
}
